<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.translator.MainActivity" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editEnglish"
            android:layout_weight="0.5"
            android:layout_height="100dp"
            android:text = "Enter word or phrase here"
            >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editTranslate"
            android:layout_weight="0.5"
            android:layout_height="100dp"
             />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonTranslateWord"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick = "buttonTranslateWordClicked"
            android:text="Translate Word Spanish" />

        <Button
            android:id="@+id/buttonTranslate"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick = "buttonTranslateClicked"
            android:text="Translate Word Croatian" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonAddWord"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick = "buttonAddWordClicked"
            android:text="Add Word Spanish" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick = "buttonAddClicked"
            android:text="Add Word Croatian" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonPhrase"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick = "buttonPhraseClicked"
            android:text="Translate Phrase Spanish" />

        <Button
            android:id="@+id/buttonPhrase2"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick = "buttonPhrase2Clicked"
            android:text="Translate Phrase Croatian" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonSpeak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick = "buttonSpeakClicked"
            android:text="Speak" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick = "buttonClearClicked"
            android:text="Clear" />

    </TableRow>

</LinearLayout>
